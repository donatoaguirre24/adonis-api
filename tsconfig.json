{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "App/*": ["./app/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "types": ["@adonisjs/core", "@adonisjs/lucid"]
  },
  "exclude": ["node_modules", "build"],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"]
}